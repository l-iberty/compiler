// A VSL program to print out factorials up
// to 10!

FUNC  main()

// Main program loops through calling the
// factorial function, and printing the result

{
    VAR  i

    i := 0

    WHILE 11 - i
    DO
    {
        PRINT "f( ", i, " ) = ", f( i ), "\n"
        i := i + 1
    }
    DONE
}


FUNC  f( n )

// Factorial defined recursively

    IF n
    THEN
        RETURN n * f( n - 1 )
    ELSE
        RETURN 1
    FI
